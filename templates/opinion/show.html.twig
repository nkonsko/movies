{% extends 'base.html.twig' %}

{% block title %}Opinion{% endblock %}

{% block body %}
    <h1>Opinion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opinion.id }}</td>
            </tr>
        <tr>
            <th>Content</th>
            <td>{{ opinion.content }}</td>
        </tr>
            <tr>
                <th>Rating</th>
                <td>{{ opinion.rating }}.0</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('opinion_index') }}">back to list</a>
    {% if app.user %}
        <a href="{{ path('opinion_edit', {'id': opinion.id}) }}">edit</a>
        {{ include('opinion/_delete_form.html.twig') }}
    {% endif %}



{% endblock %}
