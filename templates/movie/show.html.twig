{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ movie.name }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ movie.length }}</td>
            </tr>
            <tr>
                <th>Plot</th>
                <td>{{ movie.plot }}</td>
            </tr>
            <tr>
                <th>DateOrigin</th>
                <td>{{ movie.dateOrigin ? movie.dateOrigin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>
                    {% for cat in movie.categories %}
                        {{ cat.name }} ,
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('movie_index') }}">back to list</a>
    {% if app.user %}
        <a href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>
        {{ include('movie/_delete_form.html.twig') }}
    {% endif %}


{% endblock %}
